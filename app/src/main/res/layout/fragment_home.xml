<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.HomeFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_find_your_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Your Match"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- File Upload Section -->
    <FrameLayout
        android:id="@+id/frame_upload_section"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintTop_toBottomOf="@id/tv_find_your_match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <!-- Placeholder for file upload -->
        <TextView
            android:id="@+id/tv_upload_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Files . . ."
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <!-- Upload complete text (hidden initially) -->
        <TextView
            android:id="@+id/tv_upload_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Completed"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/green"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Problem Description -->
    <EditText
        android:id="@+id/et_problem_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Describe your problem here . . ."
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/frame_upload_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filters Section -->
    <LinearLayout
        android:id="@+id/linear_filters_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/et_problem_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Show Filters Button -->
        <TextView
            android:id="@+id/tv_show_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show and Select Filters â–¼"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- Filters List (hidden initially) -->
        <GridLayout
            android:id="@+id/grid_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Service"
                android:background="@drawable/filter_item_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technology Stack"
                android:background="@drawable/filter_item_background" />

            <!-- Add more filter items as needed -->

        </GridLayout>
    </LinearLayout>

    <!-- Analyze & Match Button -->
    <Button
        android:id="@+id/btn_analyze_match"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Analyze and Match"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
